@model e_commerce.Models.Cart
@{
    ViewBag.Title = "Index";
}

<div class="container pb-5">
    <div class="row">
        <div class="col-md-12">

            <h2>Alışveriş Sepeti</h2>
            <hr />
        @if(Model.CartLines.Count>0)
        {
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Ürün</th>
                    <th>Adet</th>
                    <th>Ürün Adı</th>
                    <th>Fiyat</th>
                    <th>Toplam</th>
                    <th></th>
                </tr>
               
                </thead>
                <tbody>
                @foreach (var item in Model.CartLines)
                {
                    <tr>
                        <td>
                            <img src="/Upload/@item.Product.Image" width="50" />
                        </td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            @item.Product.Name
                        </td>
                        <td>
                            @item.Product.Price
                        </td>
                        <td>
                            @((item.Product.Price*item.Quantity).ToString("c"))
                        </td>
                        <td>
                            @using (Html.BeginForm("RemoveFromCart", "Cart"))
                            {
                                @Html.Hidden("Id", item.Product.Id)
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                    Sil
                                </button>
                            }
                        </td>
                    </tr>

                }


                </tbody>
                
                <tfoot>
                <tr>
                    <td colspan="5"></td>
                    <td>
                        @Model.Total().ToString("c")
                    </td>
                </tr>
                </tfoot>
            </table>
            <a href="/Home/List" class="btn btn-primary">Alışverişe Devam Et</a>
            <a href="/Cart/Checkout" class="btn btn-primary">Alışverişi Tamamla</a>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                Sepette ürün bulunmamakta.
            </div>
        }
        </div>
    </div>
</div>